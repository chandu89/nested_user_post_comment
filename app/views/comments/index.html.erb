<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.post.title %></td>
        <td><%= link_to 'Show', comment.post %></td>
        <td><%= link_to 'Edit', edit_post_comment_path(comment.post,comment) %></td>
        <td><%= link_to 'Destroy', comment.post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

